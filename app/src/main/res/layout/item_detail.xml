<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@drawable/bg_album_item"
    android:layout_height="80dp"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/tv_item_id"
        android:layout_centerVertical="true"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:padding="15dp"
        android:text="77"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_title_container"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_item_id"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_track_title"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_width="250dp"
            android:maxLines="2"
            android:text="彩蛋，这是我最好的和篇文章呢"
            android:textColor="#444444"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_height="10dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/play_count_icon" />

                <TextView
                    android:id="@+id/tv_track_play_count"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_width="80dp"
                    android:text="245.3万"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_height="10dp"
                    android:layout_width="10dp"
                    android:src="@mipmap/ic_sound" />

                <TextView
                    android:id="@+id/tv_track_duration"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_width="80dp"
                    android:text="245.3万"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_update_time"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/ll_title_container"
        android:layout_alignBottom="@id/ll_title_container"
        android:layout_width="wrap_content"
        android:text="2018-09" />

</RelativeLayout>